<?xml version="1.0" encoding="utf-8" ?>
<Application
    x:Class="MauiApp5.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Application.Resources>
        <!-- Цвета -->
        <Color x:Key="PrimaryColor">#512BD4</Color>
        <Color x:Key="BackgroundLight">#FFFFFF</Color>
        <Color x:Key="BackgroundDark">#121212</Color>
        <Color x:Key="TextLight">#000000</Color>
        <Color x:Key="TextDark">#FFFFFF</Color>

        <!-- Стили для светлой темы -->
        <Style TargetType="ContentPage" x:Key="LightPageStyle">
            <Setter Property="BackgroundColor" Value="{StaticResource BackgroundLight}" />
        </Style>

        <!-- Стили для темной темы -->
        <Style TargetType="ContentPage" x:Key="DarkPageStyle">
            <Setter Property="BackgroundColor" Value="{StaticResource BackgroundDark}" />
        </Style>

        <!-- Базовые стили -->
        <Style TargetType="Label">
            <Setter Property="HorizontalOptions" Value="Center" />
            <Setter Property="TextColor" Value="{DynamicResource TextColor}" />
        </Style>

        <Style TargetType="Button">
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Margin" Value="4" />
        </Style>

        <!-- Динамический цвет текста (меняется с темой) -->
        <Color x:Key="TextColor">#000000</Color>
    </Application.Resources>
</Application>
