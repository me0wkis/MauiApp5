<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiApp5.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Tic-Tac-Toe Menu">

    <ScrollView>
        <VerticalStackLayout
            Padding="20"
            Spacing="20"
            VerticalOptions="Center">

            <Label
                x:Name="TitleLabel"
                Text="Tic-Tac-Toe"
                FontSize="32"
                HorizontalOptions="Center" />

            <Button
                x:Name="PlayButton"
                Text="Play"
                Clicked="OnPlayClicked" />

            <Button
                x:Name="ScoresButton"
                Text="Scores"
                Clicked="OnScoresClicked" />

            <Button
                x:Name="SettingsButton"
                Text="Settings"
                Clicked="OnSettingsClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
